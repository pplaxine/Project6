<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ===== DÃ©claration des Managers ===== -->
    <bean id="testManager" class="com.philippe75.p6.business.impl.manager.TestManagerImpl"/>
    

    <!-- ===== ManagerFactory ===== -->
    <bean id="managerFactory" class="com.philippe75.p6.business.impl.ManagerFactoryImpl">
        <property name="tm" ref="testManager"/>
    </bean>

    <!-- ==== AbstractResource ===== -->
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="org.example.demo.ticket.webapp.rest.resource.AbstractResource"/>
        <property name="targetMethod" value="setManagerFactory"/>
        <property name="arguments" ref="managerFactory"/>
    </bean>
</beans>
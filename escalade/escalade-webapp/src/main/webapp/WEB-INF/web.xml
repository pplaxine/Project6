<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  
  
  
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  
  <servlet>
    <servlet-name>Main</servlet-name>
    <servlet-class>com.philippe75.p6.webapp.servlets.Main</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Inscription</servlet-name>
    <servlet-class>com.philippe75.p6.webapp.servlets.Inscription</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EspacePretTopo</servlet-name>
    <servlet-class>com.philippe75.p6.webapp.servlets.EspacePretTopo</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>APropos</servlet-name>
    <servlet-class>com.philippe75.p6.webapp.servlets.APropos</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.philippe75.p6.webapp.servlets.Login</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Main</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Inscription</servlet-name>
    <url-pattern>/inscription/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EspacePretTopo</servlet-name>
    <url-pattern>/pret/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>APropos</servlet-name>
    <url-pattern>/apropos/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <display-name>Escalade</display-name>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>com.philippe75.p6.webapp.bootstrap.SpringConfiguration</param-value>
  </context-param>
  <context-param>
    <param-name>contextClass</param-name>
    <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
  </context-param>
  <resource-ref>
    <res-ref-name>jdbc/ESCALADE_6</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
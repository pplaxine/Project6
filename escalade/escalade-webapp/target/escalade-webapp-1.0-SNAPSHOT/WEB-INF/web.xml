<?xml version="1.0" encoding="UTF-8"?>
<web-app 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
			xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
			version="3.1">
  
  
  <display-name>Escalade</display-name>
  
  <listener>
 	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  <context-param>
  	<param-name>contextConfigLocation</param-name>					<!-- config du context -->
 	<param-value>org.exemple.demo.ticket.webapp.bootstrap.SpringConfiguration</param-value>	<!-- classe de config -->
  </context-param>
  
  <context-param>
  	<param-name>contextClass</param-name>
  	<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>	<!-- indique a Spring de charger la class pour annotation et non la xml (par défaut) -->
  </context-param>
  
  <!-- =============================================================================== -->
  <!-- récupération de Resource JNDI (configurée dans META-INF/ context.xml) -->
  <resource-ref>
  	<res-ref-name>jdbc/ESCALADE6</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
 	
 	 
  
</web-app>